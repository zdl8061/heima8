@model Heima8.OA.Model.UserInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        function afterEdit(data) {
              if (data == "ok") {
                  window.parent.window.afterEditSuccess();
              } else {
                  alert("败了");
              }
        }

        function submitForm() {
            $("form").submit();
        }
    </script>
</head>
<body>
    @using (Ajax.BeginForm(new AjaxOptions(){OnSuccess = "afterEdit"})) {
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>修改用户信息</legend>
    
            @Html.HiddenFor(model => model.ID)
    
            <div class="editor-label">
                @Html.LabelFor(model => model.UName,"用户名")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UName)
                @Html.ValidationMessageFor(model => model.UName)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Pwd,"密码")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Pwd)
                @Html.ValidationMessageFor(model => model.Pwd)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.ShowName,"显示名")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ShowName)
                @Html.ValidationMessageFor(model => model.ShowName)
            </div>
    
           
                @Html.HiddenFor(model => model.DelFlag)
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Remark,"备注")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Remark)
                @Html.ValidationMessageFor(model => model.Remark)
            </div>
    
         
                @Html.HiddenFor(model => model.ModfiedOn)
                @Html.HiddenFor(model => model.SubTime)
            <p>
                <input type="submit" value="保存" />
            </p>
        </fieldset>
    }
    
  
</body>
</html>
